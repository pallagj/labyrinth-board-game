        </table>
        <div class="form-signin mt-5">
            <input type="p-2 email" id="inputEmail" class="form-control" placeholder="Email address" required="" autofocus="">

            <button class="w-100 p-2 mt-2 btn btn-lg btn-primary btn-block" type="submit">Add new friend</button>
        </div>
    </main>
</div>

