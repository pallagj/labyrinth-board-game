<%

function toIndex(i){
    return Math.floor(i / 14) * 10 + (i % 14 < 7 ? Math.floor(i%14/2) : i%14 - 4)
}


getCard = (index) => {
    let sum = 0

    for(let i=0; i<cards.length; i++){
        let card = cards[i]

        sum += card.amount

        if(index<sum){
            return card
        }
    }

    return null
}

//Clone map
map = JSON.parse(JSON.stringify(map ));



for(let i=0; i<7; i++){
    for(let j=0; j<7; j++){

        if(map[i][j] === null){
            card = game.table[toIndex(i*7+j)]

            cardId = card.cardId
            console.log(cardId)
            cell = getCard(cardId)
            map[i][j] = {
                type: cell.type,
                target: cell.target,
                orientation: card.orientation
            }
        }
    }
}

JSON.stringify(map)

